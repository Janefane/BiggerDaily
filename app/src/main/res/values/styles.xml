<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>
    <!--首先白色的与DrawerLayout交互的指示器-->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <!--Toolbar中menu的溢出图标-->
    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/abc_ic_menu_moreoverflow_mtrl_alpha</item>
    </style>

    <style name="LightMode" parent="AppTheme">
        <item name="toolbarBackground">@color/light_blue</item>
        <item name="dateTextColor">@color/hole_gray</item>
        <item name="msgBackground">@color/white</item>
        <item name="briefTextColor">@color/black</item>
        <item name="normalBackground">@color/topic_background</item>
    </style>

    <style name="NightMode" parent="AppTheme">
        <item name="toolbarBackground">@color/night_large_gray</item>
        <item name="dateTextColor">@color/night_little_gray</item>
        <item name="msgBackground">@color/night_normal_gray</item>
        <item name="briefTextColor">@color/white</item>
        <item name="normalBackground">@color/night_middle_gray</item>
    </style>
</resources>
