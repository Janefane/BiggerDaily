<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="#14000000"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp"/>
            <solid
                android:color="@color/night_normal_gray"/>
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp"/>
        </shape>
    </item>
</layer-list>